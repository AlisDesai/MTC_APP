<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".admin.fragments.HomeFragment">

    <!-- Summary Metrics Cards -->
    <LinearLayout
        android:id="@+id/summary_metrics_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Card: Total Users -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.30"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/total_users_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Users"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/total_users_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="24sp"
                    android:textColor="#333" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Total Orders -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.30"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/total_orders_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Orders"
                    android:textSize="16sp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/total_orders_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="320"
                    android:textSize="24sp"
                    android:textColor="#333"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Total Revenue -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintWidth_percent="0.30"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/total_revenue_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Revenue"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/total_revenue_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5000.75"
                    android:textSize="24sp"
                    android:textColor="#333" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:id="@+id/quick_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/summary_metrics_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/quick_actions_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Add User Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_user_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Add User"
                app:icon="@drawable/ic_add_materials"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />

            <!-- Generate Report Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/generate_report_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generate Report"
                app:icon="@drawable/ic_labs"
                app:iconPadding="8dp"
                app:iconGravity="textStart" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
