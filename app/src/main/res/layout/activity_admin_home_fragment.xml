<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    tools:context=".admin.HomeFragmentAdmin">

    <!-- Total Customers Card -->
<androidx.cardview.widget.CardView
android:id="@+id/totalCustomersCard"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="12dp"
app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order 1"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyze total customers count"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        android:rotation="-90"
        app:tint="@color/purple" />
</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Customers Added Card -->
<androidx.cardview.widget.CardView
android:id="@+id/customersAddedCard"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/totalCustomersCard"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="12dp"
app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order 2"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor newly added customers"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        android:rotation="-90"
        app:tint="@color/purple" />
</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Pending Updates Card -->
<androidx.cardview.widget.CardView
android:id="@+id/pendingUpdatesCard"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/customersAddedCard"
android:layout_marginHorizontal="16dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="12dp"
app:cardElevation="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order 3"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track pending customer updates"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        android:rotation="-90"
        app:tint="@color/purple" />
</LinearLayout>
</androidx.cardview.widget.CardView>

    </RelativeLayout>
